{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroups_upsadjango_name": {
            "defaultValue": "upsadjango",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2021-10-01",
            "name": "[parameters('containerGroups_upsadjango_name')]",
            "location": "northeurope",
            "properties": {
                "sku": "Standard",
                "containers": [
                    {
                        "name": "[parameters('containerGroups_upsadjango_name')]",
                        "properties": {
                            "image": "proupsaacr.azurecr.io/cloud-django:latest",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 8000
                                }
                            ],
                            "environmentVariables": [],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            }
                        }
                    }
                ],
                "initContainers": [],
                "imageRegistryCredentials": [
                    {
                        "server": "<REGISTRY_NAME>.azurecr.io",
                        "username": "<REGISTRY_NAME>",
                        "password": "<REGISTRY_PASSWORD>"
                    }
                ],
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 8000
                        }
                    ],
                    "ip": "51.138.183.103",
                    "type": "Public",
                    "dnsNameLabel": "[parameters('containerGroups_upsadjango_name')]",
                    "autoGeneratedDomainNameLabelScope": "TenantReuse"
                },
                "osType": "Linux"
            }
        }
    ]
}
